{# pour shinydex : grayscale aux pokemons jamais captur√©s #}
<div
  class="pokemon{% if capturedPokemonIds is defined and pokemon.pokedex_id not in capturedPokemonIds|keys %} filtered-dex{% endif %}">

  {# shinydex : NB captures #}
  {% if capturedPokemonIds is defined and pokemon.pokedex_id in capturedPokemonIds|keys %}
  <span class="nb-captures">
    {{ capturedPokemonIds[pokemon.pokedex_id] }}
  </span>
  {% endif %}

  <p class="pokemon-id">#{{ '%03d'|format(pokemon.pokedex_id) }}</p>

  <div class="types">
  {% if capturedPokemonIds is defined and pokemon.pokedex_id in capturedPokemonIds|keys %}
    {% for type in pokemon.types %}
    <img src="{{type.image}}" alt="type {{type.name}}">
    {% endfor %}
  {% else %}
    &nbsp;  
  {% endif %}  
  </div>

  <div class="pokemon-sprites">
    <img class="sprite-normal" src="{{pokemon.spriteN}}" alt="sprite normal de {{pokemon.name}}" loading="lazy">

    <img class="sprite-shiny" src="{{pokemon.spriteS}}" alt="sprite shiny de {{pokemon.name}}" loading="lazy">
  </div>

  {% if capturedPokemonIds is defined and pokemon.pokedex_id in capturedPokemonIds|keys %}
  <p class="pokemon-name">{{pokemon.name}}</p>
  {% else %}
  <p class="pokemon-name">&nbsp;</p>
  {% endif %}
</div>