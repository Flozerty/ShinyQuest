{% extends 'base.html.twig' %}

{% block title %}Hello ApiController!{% endblock %}

{% block body %}

<h3>Mes shasses suivies</h3>

{% for capture in captures %}

<div class="pokemon-card">
  <section class="capture-infos">

    {# if capture #}
    {% if capture.termine == true %}
    <div>
      <p>rencontres</p>
      <hr>
      <p class="nbRencontres">{{capture.nbRencontres}}</p>
    </div>

    <div>
      <p>date</p>
      <hr>
      <p>{{capture.dateCapture | date('d/m/Y')}}</p>
    </div>
    {% endif %}
    {# #}

    <div>
      <p>jeu</p>
      <hr>
      <p class="jeu">{{capture.jeu}}</p>
    </div>

    <div>
      <p>lieu</p>
      <hr>
      <p class="lieu">{{capture.lieu}}</p>
    </div>

    <div>
      <p>méthode</p>
      <hr>
      <p class="methode">{{capture.methodeCapture}}</p>
    </div>

    <div>
      <img src="img/sprite-charme-chroma.png" alt="charme chroma">

      {% if capture.charmeChroma %}
      avec
      {% else %}
      sans
      {% endif %}
    </div>
  </section>

  <section class="pokemon-infos">

    #{{ '%03d'|format(capture.pokedexId) }}

    <div class="capture-img-container">
      <img src="{{capture.imgShiny}}" alt="{{capture.nomPokemon}} shiny">
      {# capture #}
      {% if capture.termine == true %}
      <p>{{capture.ball}}</p>
      {% endif %}
      {# #}
    </div>

    {# if capture #}
    {% if capture.termine == true %}

    <div class="captured-pokemon-footer">
      <div class="capture-names">
        <p>{{capture.nomPokemon}}</p>
        <p>{{capture.surnom}}</p>
      </div>

      {% if capture.sexe == "male" %}
      <i class="fa-solid fa-mars"></i>
      {% elseif capture.sexe == "femelle" %}
      <i class="fa-solid fa-venus"></i>
      {% else %}
      <i class="fa-solid fa-genderless"></i>
      {% endif %}
    </div>

    {% endif %}
    {# #}

  </section>
</div>
{% endfor %}


<h3>Débuter une shasse</h3>

<h3>Liste de mes autres shasses</h3>


{% endblock %}